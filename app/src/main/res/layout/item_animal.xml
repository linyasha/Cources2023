<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    >


    <ImageView
        android:id="@+id/type_icon"
        android:layout_width="80dp"
        android:layout_height="74dp"
        app:srcCompat="@drawable/dog"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/animal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/somename"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="80dp"
        app:layout_constraintStart_toEndOf="@id/type_icon"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/animal_breed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:text="@string/somebreed"
        app:layout_constraintStart_toEndOf="@id/type_icon"
        app:layout_constraintTop_toBottomOf="@id/animal_name" />

    <TextView
        android:id="@+id/animal_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="@string/year"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/animal_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="12.5"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="48dp"
        app:layout_constraintTop_toBottomOf="@id/animal_age"
        android:layout_marginTop="13dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>