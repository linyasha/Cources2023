<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="general_category"
        android:title="General">

        <ListPreference
            android:key="@string/theme"
            android:title="Theme"
            android:entries="@array/theme_keys"
            android:entryValues="@array/theme_values"/>

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="cloud_messaging"
            android:title="PushServices" />

        <Preference
            android:key="clear_storage"
            android:title="Clear storage"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="sound_category"
        android:title="Sounds">

        <Preference
            android:key="message_sound"
            android:title="MessageSound"/>


    </PreferenceCategory>

</PreferenceScreen>